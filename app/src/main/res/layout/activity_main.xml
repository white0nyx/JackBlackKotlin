<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green_background">

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llayout"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/stop_game_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:rotation="180"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/diller_points_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Очки диллера: "
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/diller_cards_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/player_points_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ваши очки: "
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/player_cards_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_more"
                android:layout_width="242dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/green"
                android:text="ЕЩЁ"

                android:textSize="25sp" />

            <Button
                android:id="@+id/button_stop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/red"
                android:text="ХВАТИТ"
                android:textSize="25sp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>